<h3>Update Parent Account</h3>
<form
  action="<%= '/customers/' + customer.customer_id + '/updateParent' %>"
  method="POST"
  class="update-form"
>
  <div>
    <input
      hidden
      type="text"
      class="form-control"
      name="customer_id"
      value="<%= customer.customer_id %>"
    />
  </div>

  <div class="form-group">
    <label class="form-label">
      Parent Account (ID):
      <input
        class="form-control"
        type="text"
        name="parent_entity_id"
        list="parent_names"
      />
      <datalist id="parent_names">
        <% parentAccounts.forEach(function(parent) { %>
          <option value="<%= parent.customer_id %>"><%= parent.legal_entity_name %></option>
        <% }); %>
      </datalist>
    </label>
    <button type="submit" class="btn btn-outline-primary">Update</button>
  </div>
</form>
